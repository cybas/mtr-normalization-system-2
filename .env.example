# MTR Normalization System Environment Configuration

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_EMBEDDING_MODEL=text-embedding-3-large

# Alternative: Use Claude/Anthropic
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# LLM_PROVIDER=anthropic

# Pinecone Vector Database
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENV=us-east-1
PINECONE_INDEX_NAME=mtr-products

# Alternative: Use local ChromaDB
# VECTOR_DB_PROVIDER=chroma
# CHROMA_PERSIST_DIR=./data/chroma

# Google Search API (optional)
# GOOGLE_API_KEY=your_google_api_key_here
# GOOGLE_CSE_ID=your_custom_search_engine_id

# Serper API (alternative search)
# SERPER_API_KEY=your_serper_api_key_here

# Processing Configuration
BATCH_SIZE=10
MAX_WORKERS=4
MAX_RETRIES=3

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/mtr_normalization.log

# Russian Language Models (optional)
# LABSE_MODEL=sentence-transformers/LaBSE
# RUBERT_MODEL=DeepPavlov/rubert-base-cased

# Error Tracking (optional)
# SENTRY_DSN=your_sentry_dsn_here

# Development Mode
DEBUG=False
TESTING=False
